<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    app:contentPadding="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="#eeeeee">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/icons8_attendance">

        <TextView
            android:id="@+id/tv_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국어"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/cookierunbold"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            android:background="@drawable/bg_color_recycler"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tv_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나강사"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/cookierunbold"
            android:layout_alignTop="@id/tv_course"
            android:layout_toRightOf="@id/tv_course"
            android:layout_marginLeft="50sp"
            android:background="@drawable/bg_color_recycler"
            android:padding="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선생님"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/cookierunbold"
            android:layout_alignTop="@id/tv_course"
            android:layout_toRightOf="@id/tv_teacher"
            android:layout_marginLeft="8sp"
            android:background="@drawable/bg_color_recycler"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tv_attendance_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-02-19"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/cookierunbold"
            android:layout_below="@id/tv_course"
            android:layout_alignLeft="@id/tv_course"
            android:layout_marginLeft="8sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_color_recycler"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tv_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홍길동"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/cookierunbold"
            android:layout_below="@id/tv_attendance_date"
            android:layout_alignLeft="@id/tv_attendance_date"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_color_recycler"
            android:padding="4dp"/>

        <TextView
        android:id="@+id/tv01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등원"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/cookierunbold"
        android:layout_below="@id/tv_attendance_date"
        android:layout_toRightOf="@id/tv_student"
        android:layout_alignTop="@id/tv_student"
        android:layout_marginLeft="30dp"
            android:background="@drawable/bg_color_recycler"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tv_attendance_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:30"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/cookierunbold"
            android:layout_below="@id/tv_attendance_date"
            android:layout_toRightOf="@id/tv01"
            android:layout_alignTop="@id/tv_student"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_color_recycler"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tv_time_and"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ~ "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/cookierunbold"
            android:layout_below="@id/tv_attendance_date"
            android:layout_toRightOf="@id/tv_attendance_time"
            android:layout_alignTop="@id/tv_student"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_color_recycler"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tv02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하원"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/cookierunbold"
            android:layout_below="@id/tv_attendance_date"
            android:layout_toRightOf="@id/tv_time_and"
            android:layout_alignTop="@id/tv_student"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_color_recycler"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tv_gohome_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:37"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/cookierunbold"
            android:layout_below="@id/tv_attendance_date"
            android:layout_toRightOf="@id/tv02"
            android:layout_alignTop="@id/tv_student"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_color_recycler"
            android:padding="4dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>