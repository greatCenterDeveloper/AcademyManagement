<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/appbar"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/galaxy_logo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="빅유니버스 학원"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/cookierunbold"
                    android:layout_toRightOf="@id/iv_logo"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:layout_below="@id/appbar">

            <!-- 학생 관리, 수업 목록 -->
            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:weightSum="36">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_student_management"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="17"
                    android:text="학생 관리"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:fontFamily="@font/cookierunblack"
                    android:layout_below="@id/layout_title"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_class_day_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="17"
                    android:text="수업 목록"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:fontFamily="@font/cookierunblack"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>


            <!-- 출결 현황, 문자 보내기 -->
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_below="@id/layout1"
                android:layout_marginTop="32dp"
                android:weightSum="36">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_attendance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="17"
                    android:text="출결 현황"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:fontFamily="@font/cookierunblack"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_send_message"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="17"
                    android:text="문자 보내기"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:fontFamily="@font/cookierunblack"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>


            <!-- 일정, 상담 현황 -->
            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_below="@id/layout2"
                android:layout_marginTop="32dp"
                android:weightSum="36">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_counsel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="17"
                    android:text="상담 현황"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:fontFamily="@font/cookierunblack"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_teaching_book"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="17"
                    android:text="교재 검색"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:fontFamily="@font/cookierunblack"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>


            <!-- 교재 검색, 선생님 노트 -->
            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_below="@id/layout3"
                android:layout_marginTop="32dp"
                android:weightSum="36">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_teacher_note"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="17"
                    android:text="선생님 노트"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:fontFamily="@font/cookierunblack"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="17"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout4"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#666666"
                    android:layout_above="@id/tv_teacher_name"/>

                <TextView
                    android:id="@+id/tv_teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나강사 선생님 어서오세요."
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="@font/cookierunblack"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"/>
            </RelativeLayout>
        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/drawer_header"
            app:menu="@menu/nav"
            app:itemTextAppearance="@style/tab_text"/>
    </androidx.drawerlayout.widget.DrawerLayout>


</RelativeLayout>