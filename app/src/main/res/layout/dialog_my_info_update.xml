<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_border"
    android:padding="4dp">

    <TextView
        android:id="@+id/tv_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 정보 수정"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/cookierunblack"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="32dp"
        android:layout_height="0dp"
        android:src="@drawable/baseline_close_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_alignTop="@id/tv_course"
        android:layout_alignBottom="@id/tv_course"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"/>

    <RelativeLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#666666"
        android:layout_below="@id/tv_course"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundColor="@color/white"
        app:endIconMode="clear_text"
        android:hint="이름"
        android:layout_below="@id/line"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/cookierunbold"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_call_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연락처 :"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/cookierunbold"
        android:layout_below="@id/til_name"
        android:layout_above="@id/til_prev_password"
        android:gravity="center"
        android:layout_marginLeft="8dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_call_1"
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundColor="@color/white"
        android:hint="010"
        app:endIconMode="clear_text"
        android:layout_below="@id/til_name"
        android:layout_toRightOf="@id/tv_call_title">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cookierunbold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:inputType="number"
            android:ems="3"
            android:maxLength="3"
            android:gravity="center"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_call_2"
        android:layout_width="67dp"
        android:layout_height="45dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundColor="@color/white"
        android:hint="1234"
        app:endIconMode="clear_text"
        android:layout_alignTop="@id/til_call_1"
        android:layout_toRightOf="@id/til_call_1">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cookierunbold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:inputType="number"
            android:ems="3"
            android:maxLength="4"
            android:gravity="center"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_call_3"
        android:layout_width="67dp"
        android:layout_height="45dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundColor="@color/white"
        android:hint="5678"
        app:endIconMode="clear_text"
        android:layout_alignTop="@id/til_call_1"
        android:layout_toRightOf="@id/til_call_2">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cookierunbold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:inputType="number"
            android:ems="3"
            android:maxLength="4"
            android:gravity="center"/>

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_call_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중복 확인"
        android:textStyle="bold"
        android:textSize="12sp"
        android:fontFamily="@font/cookierunblack"
        android:layout_alignTop="@id/til_call_1"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/til_call_3"
        android:layout_alignBottom="@id/til_call_1"
        android:layout_marginRight="8dp"/>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_prev_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundColor="@color/white"
        app:endIconMode="password_toggle"
        android:hint="이전 비밀번호"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@id/til_call_1">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/cookierunbold"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundColor="@color/white"
        app:endIconMode="password_toggle"
        android:hint="비밀번호"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@id/til_prev_password">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/cookierunbold"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_password_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundColor="@color/white"
        app:endIconMode="password_toggle"
        android:hint="비밀번호 확인"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@id/til_password">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:fontFamily="@font/cookierunbold"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_update"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="수정"
        android:textStyle="bold"
        android:textSize="12sp"
        android:fontFamily="@font/cookierunblack"
        android:layout_below="@id/til_password_check"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textStyle="bold"
        android:textSize="12sp"
        android:fontFamily="@font/cookierunblack"
        android:layout_below="@id/til_password_check"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"/>
</RelativeLayout>